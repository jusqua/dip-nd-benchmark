{
  "version": 6,
  "configurePresets": [
    {
      "name": "visiongl",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_LINKER_TYPE": "LLD"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "inherits": "visiongl",
      "name": "cuda+visiongl",
      "cacheVariables": {
        "CMAKE_CUDA_COMPILER": "nvcc"
      }
    },
    {
      "inherits": "visiongl",
      "name": "pcuda+sycl+visiongl",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "acpp"
      }
    }
  ]
}
